---
const { items = [] } = Astro.props;

/*
items: [
  { label: "Home", href: "/" },
  { label: "Documentação", href: "/pt" },
  { label: "License v4", href: "/pt/license-v4" }
]
*/
---

<nav aria-label="breadcrumb" style="margin-bottom: 1.5rem;">
  <ol style="
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 0.9rem;
      color: var(--text);
    ">
    {items.map((item, i) => (
      <li style="display: flex; align-items: center;">
        <a href={item.href}
           style="color: var(--dourado-ativador); text-decoration: none; font-weight: 500;">
          {item.label}
        </a>

        {i < items.length - 1 && (
          <span style="
              margin: 0 0.6rem;
              color: var(--prateado-vibrante);
              user-select: none;
            ">
            /
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>
