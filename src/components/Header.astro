---
const pathname = Astro.url.pathname;
const isPT = pathname.startsWith("/pt");
const toggleHref = isPT ? pathname.replace("/pt", "/en") : pathname.replace("/en", "/pt");
const toggleLabel = isPT ? "EN" : "PT";
---

<header style="
  padding: 1rem 2rem;
  background: var(--preto-cosmico);
  border-bottom: 1px solid var(--dourado-ativador);
  color: var(--dourado-ativador);
  display: flex;
  justify-content: space-between;
  align-items: center;
">
  <div style="font-size: 1.3rem; font-family: var(--font-secondary);">
    LICHTARA LICENSE v4
  </div>

  <nav style="display: flex; gap: 2rem;">
    <a href='/' style="color: var(--prateado-vibrante);">Home</a>
    <a href={toggleHref} style="color: var(--dourado-ativador);">{toggleLabel}</a>
    <a href='https://github.com/lichtara/lichtara-license-4.0' style="color: var(--prateado-vibrante);">
      GitHub
    </a>
  </nav>
</header>
