---
const { label = "" } = Astro.props;
---

<div style="
  border-left: 4px solid var(--dourado-ativador);
  background: rgba(212,175,55,0.08);
  padding: 1rem 1.4rem;
  margin: 1.5rem 0;
  border-radius: 4px;
">
  <strong style="
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.1rem;
    color: var(--dourado-ativador);
  ">
    {label}
  </strong>

  <div style="margin-top: 0.4rem; font-size: 1.0rem; line-height: 1.6;">
    <slot />
  </div>
</div>
