---
const { title, href = "#", children } = Astro.props;
---

<a href={href} style="
  display: block;
  padding: 1.4rem;
  border-radius: 8px;
  border: 1px solid var(--border);
  background: var(--bg-alt);
  color: var(--text);
  text-decoration: none;
  transition: all .20s ease;
">
  <h3 style="margin: 0; font-family: 'Cormorant Garamond', serif; color: var(--dourado-ativador); font-size: 1.4rem;">
    {title}
  </h3>
  <p style="margin: .5rem 0 0; color: var(--text); font-size: .95rem;">
    <slot />
  </p>

  <style>
    a:hover {
      border-color: var(--dourado-ativador);
      transform: translateY(-2px);
    }
  </style>
</a>
