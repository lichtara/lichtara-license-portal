---
import Breadcrumb from "../components/Breadcrumb.astro";
import Callout from "../components/Callout.astro";
import HighlightQuote from "../components/HighlightQuote.astro";

const { annexCode = "", title = "", children } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <title>{annexCode} — {title} | Lichtara License v4</title>
  </head>

  <body style="background: var(--bg); color: var(--text);">
    <main style="max-width: 900px; margin: 0 auto; padding: 2rem 1.5rem;">

      <Breadcrumb items={[
        { label: "Home", href: "/" },
        { label: "Documentação", href: "/pt" },
        { label: "License v4", href: "/pt/license-v4" },
        { label: annexCode, href: Astro.url.pathname }
      ]} />

      <h1 style="
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.6rem;
        color: var(--dourado-ativador);
        margin-bottom: .5rem;
      ">
        {annexCode} — {title}
      </h1>

      <p style="color: var(--text); font-size: 1.1rem; margin-bottom: 2rem;">
        Anexo oficial da Série VI da Lichtara License v4 — Structural Living License.
      </p>

      <div class="annex-content">
        <slot />
      </div>

    </main>
  </body>
</html>
